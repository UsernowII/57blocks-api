{
  "name": "57blocks",
  "version": "1.0.0",
  "description": "API 57 Blocks Challenge",
  "author": "usernow.82@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/UsernowII/57blocks-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UsernowII/57blocks-api"
  },
  "keywords": [
    "typescript",
    "express"
  ],
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.x"
  },
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "tsnd -r tsconfig-paths/register --inspect=0.0.0.0:9229 --respawn src/main.ts",
    "build": "npm run validate-typescript && npm run build:clean && npm run generate-dist",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "yarn test --watchAll -c jest-unit-config.js",
    "test:e2e": "yarn test --watchAll -c jest-e2e-config.js",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build:clean": "rimraf dist; exit 0",
    "validate-typescript": "tsc -p tsconfig.prod.json --noEmit",
    "generate-dist": "swc ./src -d dist --strip-leading-paths"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.24",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "eslint-plugin-vitest": "^0.4.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "nock": "^13.5.4",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
